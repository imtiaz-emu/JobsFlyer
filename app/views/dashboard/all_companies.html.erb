
<h3>All Companies</h3>

<div class="row">
  <% if @companies.count > 0 %>
    <% @companies.each do |company| %>
      <div class="col-md-3 col-sm-4 col-xs-12">
        <section class="widget widget-sm bg-primary">
          <div class="widget-body">

            <p class="text-center mb-xs"><%= image_tag company.logo.url(:logo), class: 'img-thumbnail img-responsive' if company.logo.present? %></p>

            <h3>
              <span class="fw-semi-bold"><%= company.name %></span>
            </h3>

            <p class="fs-mini mt text-center">
              <span class="fw-semi-bold"><%= company.followers.count %></span> Followers
            </p>

            <p class="fs-mini text-center">
              <span class="fw-semi-bold"><%= company.jobs.count %></span> Jobs
            </p>

            <% unless guest_user? %>
              <div class="xs-actions text-center">
                <%= link_to "Show", company_path(company), class: 'btn btn-warning btn-xs' %>
                <%= link_to "Edit", edit_company_path(company), class: 'btn btn-warning btn-xs' if is_company_admin(company) %>
                <%#= link_to "Subscriptions", subscription_path(company), class: 'btn btn-warning btn-xs' %>
                <%= link_to "Destroy", company, :method => :delete, class: 'btn btn-warning btn-xs' if is_company_admin(company) %>
              </div>
            <% end %>
          </div>
        </section>
      </div>
    <% end %>
  <% else %>
    <p class=" col-sm-12 fs-mini mt">
      Currently there is no company.
    </p>
  <% end %>
</div>
<div class="row">
  <div class="col-lg-7 col-md-12">
    <div class="row">
      <%= render :partial => 'widgets' %>
    </div>

    <%#= link_to "Post something", new_post_path() , class: 'btn btn-xs btn-primary' if (my_companies.count > 0 || current_profile.can_post) %>

    <div class="row">
      <%= render :partial => 'timeline' %>
    </div>

  </div>
  <div class="col-md-5 col-sm-12">
    <div class="row">
      <div class="col-sm-12">
        <section class="widget text-white">
          <div class="widget-body clearfix">
            <% if Rails.env == 'production' %>
              <script type="text/javascript" language="javascript">
                amzn_assoc_ad_type = "contextual";
                amzn_assoc_tracking_id = "cybersoluti05-20";
                amzn_assoc_marketplace = "amazon";
                amzn_assoc_region = "US";
                amzn_assoc_placement = "5ZNQTWSUZ36GDIXR";
                amzn_assoc_linkid = "5ZNQTWSUZ36GDIXR";
                amzn_assoc_emphasize_categories = "2335752011, 13900871, 1064954, 3375251, 377110011";
                amzn_assoc_fallback_products = "";
                amzn_assoc_width = "300";
                amzn_assoc_height = "250";
              </script>
              <script type="text/javascript" language="javascript" src="//z-na.amazon-adsystem.com/widgets/q?ServiceVersion=20070822&Operation=GetScript&ID=OneJS&WS=1&MarketPlace=US&source=ac"></script>
            <% else %>
              <%= image_tag 'http://placehold.it/300x300', class: 'img-responsive' %>
            <% end %>
          </div>
        </section>
      </div>
    </div>
    <div class="row">
      <% if current_user.profile.looking_for_job %>
        <%= render :partial => 'recommended_jobs' %>
      <% else %>
        <div class="col-sm-12">
          <section class="widget text-white">
            <div class="widget-body clearfix">
              <%= image_tag 'http://placehold.it/360x225', class: 'img-responsive' %>
            </div>
          </section>
        </div>
      <% end %>
    </div>
  </div>
</div>

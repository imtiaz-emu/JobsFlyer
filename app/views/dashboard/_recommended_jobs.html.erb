<div class="col-md-6">
  <section class="widget">
    <header>
      <h5><span class="label label-danger">Recommended</span> Jobs</h5>
      <div class="widget-controls">
        <a href="#"><i class="fa fa-refresh"></i></a>
        <a href="#" data-widgster="close"><i class="glyphicon glyphicon-remove"></i></a>
      </div>
    </header>
    <div class="widget-body no-padding">
      <div class="list-group list-group-lg">
        <% @recommended_jobs.each do |job| %>
            <a class="list-group-item" href="#">
            <span class="thumb-sm pull-left mr">
              <%= image_tag job.company.logo.present? ? job.company.logo_url(:thumb) : 'jf_logo.jpg', class: 'img-circle' %>
                <i class="status status-bottom bg-success"></i>
            </span>
              <h5 class="no-margin"><%= job.title %></h5>
              <p class="help-block text-ellipsis no-margin">
                <% job.skills.first(4).each do |skill| %>
                    <span class="badge"><%= skill.name %></span>
                <% end %>
              </p>
            </a>
        <% end %>
      </div>
    </div>
  </section>
</div>

<div class="row">
  <div class="col-lg-4 col-sm-6 col-xs-10 col-lg-offset-4 col-sm-offset-3 col-xs-offset-1">
    <h4 class="widget-login-logo animated fadeInUp">
      <i class="fa fa-circle text-gray"></i>
      <%= link_to 'Jobsflyer', root_url %>
      <i class="fa fa-circle text-warning"></i>
    </h4>
    <section class="widget widget-login animated fadeInUp">
      <header>
        <h3>Forgot your password?</h3>
      </header>
      <div class="widget-body">

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: 'login-form mt-lg', method: :post}) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
          </div>
          <div class="clearfix">
            <div class="btn-toolbar pull-right">
              <button type="submit" class="btn btn-default btn-sm">Send me reset password instructions</button>
              <!--<a class="btn btn-inverse btn-sm" href="index.html">Login</a>-->
            </div>
          </div>
          <div class="row">
            <div class="col-sm-6 col-sm-push-6">

            </div>

            <div class="col-sm-6 col-sm-pull-6">
              <%= render "devise/shared/links" %>
              <!--<a class="mr-n-lg" href="#">Trouble with account?</a>-->
            </div>
          </div>
        <% end %>
      </div>
    </section>
  </div>
</div>


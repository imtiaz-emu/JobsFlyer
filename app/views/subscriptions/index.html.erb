<h1>Listing Subscriptions</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subscriptions.each do |subscription| %>
      <tr>
        <td><%= link_to 'Show', user_subscription_path(subscription.user, subscription) %></td>
        <td><%= link_to 'Edit', edit_user_subscription_path(subscription.user, subscription) %></td>
        <td><%= link_to 'Destroy', user_subscription_path(subscription.user, subscription), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subscription', new_user_subscription_path(current_user) %>

<% if @commentable.is_a?(Post) %>
var post_id = <%= @commentable.id %>;
$("#post__" + post_id.toString() +" .form-comment").html('<%=j render partial: 'comments/form', :locals => {:job_id => nil, :post_id => @commentable.id, :comment => @comment} %>')

<% elsif @commentable.is_a?(Job) %>

var job_id = <%= @commentable.id %>;
$("#job__" + job_id.toString() +" .form-comment").html('<%=j render partial: 'comments/form', :locals => {:job_id => @commentable.id, :post_id => nil, :comment => @comment} %>')

<% end %>
<div class="row">
  <div class="jumbotron">
    <form action="<%= search_index_path %>" class="search-jobs-flyer navbar-form text-center" role="search" method="get">
      <div class="form-group">
        <div class="input-group">

          <input class="form-control" type="text"   name="query">
          <small>What</small>
        </div>
      </div>
      <div class="form-group hidden-sm">
        <div class="input-group">
          <!--<span class="input-group-addon">-->
          <!--<i class="fa fa-question"></i>-->
          <!--</span>-->
          <input class="form-control" type="text" id="job_locations_attributes"  name="area">
          <small>Where</small>
        </div>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-jobsflyer btn-sm"> <i class="fa fa-search"></i> Search</button>
      </div>
    </form>
  </div>

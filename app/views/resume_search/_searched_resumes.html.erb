<div class="col-md-8">
  <div id="loading-indicator">
    <%= image_tag("loading.gif", :id => "loading-indicator") %>
  </div>
  <section class="widget">
    <header>
      <h4>Search matched <span class="fw-semi-bold">Resumes</span></h4>
      <div class="widget-controls">
        <a data-widgster="expand" title="Expand" href="#"><i class="glyphicon glyphicon-chevron-up"></i></a>
        <a data-widgster="collapse" title="Collapse" href="#"><i class="glyphicon glyphicon-chevron-down"></i></a>
        <a data-widgster="close" title="Close" href="#"><i class="glyphicon glyphicon-remove"></i></a>
      </div>
    </header>
    <div class="widget-body">

      <div class="mt">
        <% if resumes.count > 0 %>
            <table id="datatable-table" class="table table-striped table-hover">
              <thead>
              <tr>
                <th>Name</th>
                <th>Gender</th>
                <th class="no-sort hidden-xs">Resume</th>
                <th class="hidden-xs">Skills</th>
                <th class="no-sort">Profile</th>
              </tr>
              </thead>
              <tbody>
                <% resumes.each do |resume| %>
                  <tr>
                    <td><span class="fw-semi-bold"><%= resume['first_name'] %> <%= resume['last_name'] %></span></td>
                    <td><span class="fw-semi-bold"><%= resume['gender'].capitalize if resume['gender'].present? %></span></td>
                    <td class="hidden-xs"><%= link_to 'View resume', "http://dropresume.com/#{resume['username']}" %></td>
                    <td class="hidden-xs"><%= resume['skills'] %></td>
                    <td class="width-150">
                      <div class="progress progress-sm mt-xs">
                        <div class="progress-bar progress-bar-success" style="width: <%= resume['profile'].to_i %>%;"></div>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        <% else %>
            No resume to show!
        <% end %>
      </div>
    </div>
  </section>
</div>